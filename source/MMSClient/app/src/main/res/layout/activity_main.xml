<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jaehee.mms_client.MainActivity">

    <TextView
        android:id="@+id/TxtvSended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sended: Hello World!" />

    <TextView
        android:text="Received: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtvSended"
        android:layout_alignParentStart="true"
        android:id="@+id/TxtvReceived" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtvReceivedMsg"
        android:layout_alignBaseline="@+id/TxtvReceived"
        android:layout_alignBottom="@+id/TxtvReceived"
        android:layout_toEndOf="@+id/TxtvReceived" />
</RelativeLayout>
